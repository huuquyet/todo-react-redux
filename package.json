{
  "name": "todo-react-redux",
  "version": "0.7.3",
  "description": "Todo app with React, Redux, and Firebase",
  "homepage": "https://huuquyet.github.io/todo-react-redux",
  "repository": {
    "type": "git",
    "url": "https://github.com/huuquyet/todo-react-redux.git"
  },
  "author": {
    "name": "Richard Park",
    "email": "objectiv@gmail.com"
  },
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=10.13"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "react-app",
      "plugin:prettier/recommended"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "ignorePatterns": [
      "build"
    ],
    "globals": {
      "firebase": true,
      "sinon": true
    }
  },
  "prettier": {
    "bracketSameLine": true,
    "bracketSpacing": false,
    "printWidth": 90,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "useTabs": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "snyk": true,
  "scripts": {
    "build": "react-scripts build",
    "deploy": "gh-pages -d build",
    "eject": "react-scripts eject",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "lint": "eslint \"**/*.+(js|jsx)\"",
    "lint:fix": "eslint \"**/*.+(js|jsx)\" --fix",
    "prebuild": "npm run lint:fix && npm run format",
    "predeploy": "npm run build",
    "prepublish": "npm run snyk-protect",
    "snyk-protect": "snyk-protect",
    "start": "react-scripts start",
    "test": "react-scripts test --env=jsdom"
  },
  "dependencies": {
    "@mui/icons-material": "^5.11.0",
    "@mui/material": "^5.11.7",
    "@reduxjs/toolkit": "^1.9.2",
    "connected-react-router": "^6.9.3",
    "core-js": "^3.27.2",
    "firebase": "^9.17.1",
    "immutable": "^4.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^4.3.1",
    "redux-thunk": "^2.4.2",
    "regenerator-runtime": "^0.13.11",
    "reselect": "^4.1.7"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/eslint-parser": "^7.19.1",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@snyk/protect": "^1.1096.0",
    "enzyme": "^3.11.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "express": "^4.19.2",
    "gh-pages": "^5.0.0",
    "history": "^4.10.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.1",
    "prettier": "^2.8.3",
    "prop-types": "^15.8.1",
    "react-scripts": "^5.0.1",
    "sinon": "^15.0.1"
  },
  "browserslist": {
    "production": [
      ">0.25%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
